namespace OP;

//	...
$args = OP()->Unit()->Router()->Args();
$arg0 = $args[0] ?? null;

//	...
if( $arg0 ){
	OP()->Session()->Set(md5($arg0), true);
}

//	...
$list = [
	'app'      => 'App',
	'cicd'     => 'CI/CD',
	'D'        => 'D()',
	'OP'       => 'OP()',
	'template' => 'Template',
	'router'   => 'Router',
	'config'   => 'Config',
	'layout'   => 'Layout',
	'error'    => 'Error',
	'notice'   => 'Notice',
	'html_pass-through' => 'HTML Pass-through',
	'unit'     => 'Unit',
	'module'   => 'Module',
];

?>
<ul class="menu left">
	<?php foreach( $list as $dir => $label ): ?>
		<li>
			<?php
			//	...
			$href = null;
			$hash = md5($dir);

			//	...
			if( OP()->Session()->Get($hash) ){
				$href = OP()->URL("tutorial:/{$dir}/");
			}
			?>
			<?php if( $href ): ?>
				<a href="<?= $href ?>"><?= $label ?></a>
			<?php else: ?>
				<span><?= $label ?></span>
			<?php endif; ?>
		</li>
	<?php endforeach; ?>
</ul>
